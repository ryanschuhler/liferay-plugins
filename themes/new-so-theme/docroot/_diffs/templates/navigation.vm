<nav class="$nav_css_class" id="navigation">
	<h1>
		<span>#language("navigation")</span>
	</h1>

	<ul>
		#foreach ($nav_item in $nav_items)
			#set ($navHasChildren = $nav_item.hasChildren())
			#set ($nav_item_class = "")

			#if ($nav_item.isSelected())
				#set ($nav_item_class = "selected")
			#end
			#if ($navHasChildren)
				#set ($nav_item_class = ${nav_item_class} + " has-children")
			#end

			<li class="$nav_item_class">
				<a href="$nav_item.getURL()" $nav_item.getTarget()><span>$nav_item.icon() $nav_item.getName()
					#if ($navHasChildren)
						&#9662;
					#end
				</span></a>

				#if ($navHasChildren)
					<ul class="child-menu">
						#foreach ($nav_child in $nav_item.getChildren())
							#set ($hasGrandChildren = $nav_child.hasChildren())
							#set ($grand_child_class = "")

							#if ($nav_child.isSelected())
								#set ($grand_child_class = "selected")
							#end
							#if ($nav_child.isChildSelected())
								#set ($grand_child_class = "selected")
							#end
							#if ($hasGrandChildren)
								#set ($grand_child_class = ${grand_child_class} + " has-grandchildren")
							#end

							<li class="$grand_child_class">
								<a href="$nav_child.getURL()" $nav_child.getTarget()><span>$nav_child.icon() $nav_child.getName()</span>
									#if ($hasGrandChildren)
										<span id="right-triangle">&#9656;</span>
									#end
								</a>

								#if ($hasGrandChildren)
									<ul class="grandchild-menu">
										#foreach ($nav_grandchild in $nav_child.getChildren())
											#if ($nav_grandchild.isSelected())
												<li class="selected">
											#else
												<li>
											#end
												<a href="$nav_grandchild.getURL()" $nav_grandchild.getTarget()>$nav_grandchild.getName()</a>
											</li>
										#end
									</ul>
								#end
							</li>
						#end
					</ul>
				#end
			</li>
		#end
	</ul>
</nav>